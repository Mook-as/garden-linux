{
  "variables": {
    "version": "",
    "access_token": "{{env `GARDEN_PACKER_ATLAS_TOKEN`}}"
  },
  "builders": [
    {
      "name": "garden-ci.ubuntu.virtualbox",
      "type": "virtualbox-ovf",
      "headless": true,
      "source_path": "garden-ci/output/garden-ci.ubuntu.virtualbox.ovf",
      "output_directory": "garden-ci/release_output",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo -S shutdown -P now"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "vagrantfile_template": "garden-ci/Vagrantfile.template",
        "output": "garden-ci/output/{{.BuildName}}.box"
      },
      {
        "type": "atlas",
        "token": "{{user `access_token`}}",
        "artifact": "cloudfoundry/garden-ci-ubuntu",
        "artifact_type": "vagrant.box",
        "metadata": {
            "provider": "virtualbox",
            "version": "{{user `version`}}"
        }
      }
    ]
  ]
}
